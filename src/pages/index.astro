---
import Navbar from '@/components/Navbar.astro'
import Hero from '@/components/Hero.astro'
import Features from '@/components/Features.astro'
import Testimonials from '@/components/Testimonials.astro'
import Footer from '@/components/Footer.astro'
---

<html lang="en">
  <head>
    <title>SaaSify – Effortless Productivity for Teams</title>
    <meta name="description" content="SaaSify empowers high-performing teams with modern collaboration and task management tools for maximum productivity." />
    <meta property="og:title" content="SaaSify – Effortless Productivity for Teams" />
    <meta property="og:description" content="SaaSify empowers high-performing teams with modern collaboration and task management tools for maximum productivity." />
    <meta property="og:image" content="/images/saas-mockup.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="bg-gradient-to-tr from-indigo-100 via-white to-fuchsia-50 dark:from-gray-950 dark:via-gray-900 dark:to-slate-900 text-gray-900 dark:text-gray-100 font-sans min-h-screen transition-colors duration-300 antialiased relative overflow-x-hidden">
    <div aria-hidden="true" class="pointer-events-none fixed -z-10 inset-0 flex justify-center">
      <div class="w-[80vw] h-[60vw] max-w-4xl rounded-full blur-3xl opacity-40 dark:opacity-25 bg-gradient-to-br from-indigo-400 via-purple-400 to-fuchsia-400 dark:from-fuchsia-800 dark:via-indigo-900 dark:to-purple-900 animate-pulse"></div>
    </div>
    <header>
      <Navbar />
    </header>
    <main>
      <Hero />
      <section aria-label="Key Features">
        <Features />
      </section>
      <section aria-label="Customer Testimonials">
        <Testimonials />
      </section>
    </main>
    <footer>
      <Footer />
    </footer>
  </body>
</html>